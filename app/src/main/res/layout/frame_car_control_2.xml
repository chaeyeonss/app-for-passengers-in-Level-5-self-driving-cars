<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/car_img"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/car_indoor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/seat_detail"/>
    <GridLayout
        android:id="@+id/car_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/car_img"
        app:layout_constraintBottom_toBottomOf="@+id/car_img"
        app:layout_constraintStart_toStartOf="@+id/car_img"
        app:layout_constraintEnd_toEndOf="@+id/car_img">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/seat1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/seat"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/seat2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/seat"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/seat3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/seat"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/seat4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/seat"/>
    </GridLayout>
    <LinearLayout
        android:id="@+id/seat_detail"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/car_img"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.5"
            android:paddingTop="20dp"
            android:src="@drawable/seat_detail"/>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.5"
            android:rowCount="1"
            android:columnCount="4">
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:text="0"
                android:textColor="@color/light_gray"
                android:textSize="12dp"
                android:background="@drawable/circle_0_button"/>
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:text="1"
                android:textColor="@color/light_gray"
                android:textSize="12dp"
                android:background="@drawable/circle_0_button"/>
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:text="2"
                android:textColor="@color/light_gray"
                android:textSize="12dp"
                android:background="@drawable/circle_0_button"/>
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:text="+"
                android:textColor="@color/light_gray"
                android:textSize="12dp"
                android:background="@drawable/circle_0_button"/>
        </GridLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>