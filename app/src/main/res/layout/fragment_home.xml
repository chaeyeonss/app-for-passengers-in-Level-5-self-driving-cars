<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/homeTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/app_name"
        android:fontFamily="sans-serif-black"
        android:gravity="top"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintVertical_weight="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homeCardListView"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="p" />

    <ListView
        android:id="@+id/homeCardListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeTextView"
        app:layout_constraintVertical_weight="0.85" />

</androidx.constraintlayout.widget.ConstraintLayout>